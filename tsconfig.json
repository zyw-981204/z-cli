{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "lib",
    "lib": [
      "esnext",
      "DOM",
    ],
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "target": "es6",
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "./lib/*"
      ],
      "@cli-shared-utils": [
        "./lib/cli-shared-utils/index"
      ],
      "@cli-shared-utils/*": [
        "./lib/cli-shared-utils/*"
      ]
    }
  },
  "include": [
    "lib"
  ],
  "compileOnSave": true,
}